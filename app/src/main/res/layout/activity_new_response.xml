<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_board_background"
    tools:context="lumstic.example.com.lumstic.DashBoardActivity">
<View
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/dashboard_bg_img"></View>

    <RelativeLayout
        android:id="@+id/question_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/controls_container"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/dash_board_foreground">
        <TextView
            android:id="@+id/question_number_text"
            android:layout_width="wrap_content"
            android:text="Q.1)"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingTop="6dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"/>
<TextView
    android:id="@+id/question_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="What is the capital of india?"
    android:textSize="20sp"
    android:padding="6dp"
    android:layout_toRightOf="@+id/question_number_text"/>


        <ScrollView
            android:layout_below="@+id/question_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_below="@+id/question_text"
            android:id="@+id/field_container"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="fill_parent">

            </RelativeLayout>
        </ScrollView>
        </RelativeLayout>


    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Back"

                android:background="@color/back_button_background"
                android:textColor="@color/back_button_text"
                android:textSize="23sp"
                android:id="@+id/previous_question" />

        <Button
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/descrioption_text_color"
            android:layout_width="fill_parent"
            android:textSize="22sp"
            android:layout_height="fill_parent"
            android:text="1 out of 12"/>
        <Button
            android:id="@+id/next_queation"
            android:layout_weight="1"
            android:background="@color/login_button_color"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="23sp"
            android:text="Next  >"/>
    </LinearLayout>


</RelativeLayout>