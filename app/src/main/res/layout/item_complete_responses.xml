<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <lumstic.ashoka.com.lumstic.Views.RobotoRegularTextView
        android:id="@+id/response_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Response No 1"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/response_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:text="Name of the city: Pune"
        android:textColor="@color/text_color_total"
        android:textSize="14sp" />
</LinearLayout>