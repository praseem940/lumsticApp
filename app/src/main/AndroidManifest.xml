<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lumstic.example.com.lumstic" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".DashBoardActivity"
            android:label="@string/title_activity_dash_board" >
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password" >
        </activity>
        <activity
            android:name=".SurveyDetailsActivity"
            android:label="@string/title_activity_survey_details" >
        </activity>
        <activity
            android:name=".CompleteResponsesActivity"
            android:label="@string/title_activity_complete_responses" >
        </activity>
        <activity
            android:name=".ActiveSurveyActivity"
            android:label="@string/title_activity_active_survey" >
        </activity>
        <activity
            android:name=".IncompleteResponseActivity"
            android:label="@string/title_activity_incomplete_response" >
        </activity>
        <activity
            android:name=".NewResponseActivity"
            android:label="@string/title_activity_new_response" >
        </activity>
    </application>

</manifest>
